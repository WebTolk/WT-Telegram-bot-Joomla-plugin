<?xml version="1.0"?>
<extension type="plugin" method="upgrade" group="system">
    <name>System - WT Telegram bot</name>
    <author>Sergey Tolkachyov</author>
    <authorEmail>info@web-tolk.ru</authorEmail>
    <authorUrl>https://web-tolk.ru</authorUrl>
    <creationDate>13.11.2025</creationDate>
    <copyright>Copyright (c) 2024 - 2025 Sergey Tolkachyov. All rights reserved.</copyright>
    <license>GNU General Public License v3.0</license>
    <version>1.1.1</version>
    <description>PLG_WTTELEGRAMBOT_DESC</description>
    <namespace path="src">Joomla\Plugin\System\Wttelegrambot</namespace>
    <scriptfile>script.php</scriptfile>
    <files>
        <folder plugin="wttelegrambot">src</folder>
        <folder>language</folder>
		<folder>services</folder>
		<folder>sql</folder>
    </files>
    <languages folder="language" client="administrator">
        <language tag="en-GB">en-GB/plg_system_wttelegrambot.ini</language>
        <language tag="ru-RU">ru-RU/plg_system_wttelegrambot.ini</language>
        <language tag="en-GB">en-GB/plg_system_wttelegrambot.sys.ini</language>
        <language tag="ru-RU">ru-RU/plg_system_wttelegrambot.sys.ini</language>
    </languages>
	<install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field addfieldprefix="Joomla\Plugin\System\Wttelegrambot\Fields" type="plugininfo" name="plugininfo"/>
                <field addfieldprefix="Joomla\Plugin\System\Wttelegrambot\Fields" type="botinfo" name="botinfo"/>
                <field type="text" name="telegram_api_token" label="PLG_WTTELEGRAMBOT_TELEGRAM_API_TOKEN"/>
                <field addfieldprefix="Joomla\Plugin\System\Wttelegrambot\Fields"  type="chatidinfo" name="telegram_chat_id" label="PLG_WTTELEGRAMBOT_TELEGRAM_CHAT_ID"/>
                <field type="text" name="message_thread_id" label="PLG_WTTELEGRAMBOT_MESSAGE_THREAD_ID"/>
                <field type="note" name="code_example" label="PLG_WTTELEGRAMBOT_CODE_EXAMPLE_LABEL" description="PLG_WTTELEGRAMBOT_CODE_EXAMPLE"/>
                <field type="note" name="code_example_desc" label="PLG_WTTELEGRAMBOT_CODE_DESC_LABEL" description="PLG_WTTELEGRAMBOT_CODE_DESC"/>
            </fieldset>
        </fields>
    </config>
    <updateservers>
        <server type="extension" priority="1" name="WT Telegram bot updates">https://web-tolk.ru/component/swjprojects/jupdate?element=wttelegrambot</server>
    </updateservers>
    <changelogurl>https://web-tolk.ru/jchangelog?element=wttelegrambot</changelogurl>
</extension>